<% form_for("user", {action:"#", multipart: true}, function(f){ %>
<%- f.hidden_field('id') %>

<%- f.label_for("username", "test", {class:"test"}) %>
<%- f.text_field("username") %><br />

<%- f.label_for("date") %>
<%- f.date_time('date', date, {twelvehour:true, minute_interval: 15, class: 'test'}) %><br />

<%- f.label_for("email") %>
<%- f.email_field('email', {value: 'test@email.com'}) %><br />

<%- f.label_for("website") %>
<%- f.url_field('website', {value:'http://website.com'}) %><br />

<%- f.label_for("file") %>
<%- f.file_field('file', {value: 5}) %><br />

<%- f.label_for("search") %>
<%- f.search_field('search') %><br />

<%- f.label_for("phone") %>
<%- f.phone_field('something[interesting]') %><br />

<%- f.label_for("checkbox") %>
<%- f.checkbox("checkbox", {value: "value"}) %><br />
<br /><br />
自定义下拉框：<br />
<%- f.custom_select("usergender", [{text:"男", value:"1"},{text:"女", value:"2"}], "请选择性别", {readonly:"readonly", class: "hun_sele_arr hun_selew201", drListClass: "hun_sele_ul hun_selebox201", drListMaxHeight : "200"} )%><br />
<br />
自定义sharecode下拉框：<br />
<%- f.custom_select_sharecode("city", 1, "请选择", {readonly:"readonly", class: "hun_sele_arr hun_selew201", drListClass: "hun_sele_ul hun_selebox201", drListMaxHeight : "200"})%>
<br /><br />
自定义地区下拉框：<br />
<%- f.custom_select_location("loc", "locp", "请选择市", "请选择省", "/cities"
        , {readonly:"readonly", class: "hun_sele_arr hun_selew201", drListClass: "hun_sele_ul hun_selebox201", drListMaxHeight : "200"}
        , {readonly:"readonly", class: "hun_sele_arr hun_selew201", drListClass: "hun_sele_ul hun_selebox201", drListMaxHeight : "200"})%>



<%- f.reset() %><br />
<%- f.submit({class: 'button'}) %><br />
<% }) %>

